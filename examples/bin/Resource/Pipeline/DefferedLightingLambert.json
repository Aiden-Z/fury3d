{
    "shaders": [
        {
            "name": "gbuffer_shader",
            "path": "Resource/Shader/Lambert/Gbuffer.glsl",
            "type": "static_mesh", 
            "textures" : ["diffuse"]
        },
        {
            "name": "gbuffer_notexture_shader",
            "path": "Resource/Shader/Lambert/GBufferNoTexture.glsl",
            "type": "static_mesh", 
            "textures" : ["color_only"]
        },
        {
            "name": "gbuffer_skin_shader",
            "path": "Resource/Shader/Lambert/Gbuffer.glsl",
            "type": "skinned_mesh", 
            "textures" : ["diffuse"]
        },
        {
            "name": "gbuffer_notexture_skin_shader",
            "path": "Resource/Shader/Lambert/GBufferNoTexture.glsl",
            "type": "skinned_mesh", 
            "textures" : ["color_only"]
        },
        {
            "name": "pointlight_shader", 
            "path": "Resource/Shader/Lambert/PointLight.glsl", 
            "type": "point_light"
        },
        {
            "name": "dirlight_shader",
            "path": "Resource/Shader/Lambert/SunLight.glsl",
            "type": "dir_light"
        },
        {
            "name": "spotlight_shader",
            "path": "Resource/Shader/Lambert/SpotLight.glsl",
            "type": "spot_light"
        },
        {
            "name": "phong_shader",
            "path": "Resource/Shader/Lambert/Lambert.glsl",
            "type": "other"
        },
        {
            "name": "draw_depth_shader",
            "path": "Resource/Shader/DrawDepth.glsl",
            "type": "other"
        },
        {
            "name": "draw_shadow_shader",
            "path": "Resource/Shader/DrawShadow.glsl",
            "type": "other"
        }
    ],
    "textures": [
        {
            "name": "gbuffer_depth",
            "format": "depth24",
            "filter": "linear",
            "wrap": "repeat",
            "width": 1280,
            "height": 720
        },
        {
            "name": "gbuffer_normal",
            "format": "rgba16",
            "filter": "linear",
            "wrap": "repeat",
            "width": 1280,
            "height": 720
        },
        {
            "name": "gbuffer_diffuse",
            "format": "rgba8",
            "filter": "linear",
            "wrap": "repeat",
            "width": 1280,
            "height": 720
        },
        {
            "name": "gbuffer_light",
            "format": "rgba8",
            "filter": "linear",
            "wrap": "repeat",
            "width": 1280,
            "height": 720
        }
    ],
    "passes": [
        {
            "name": "pass_gbuffer",
            "camera": "camNode",
            "shaders": [
                "gbuffer_shader", 
                "gbuffer_notexture_shader", 
                "gbuffer_skin_shader", 
                "gbuffer_notexture_skin_shader"
            ],
            "index": 0,
            "input": [],
            "output": [
                "gbuffer_depth",
                "gbuffer_normal",
                "gbuffer_diffuse"
            ],
            "blendMode": "replace",
            "compareMode": "less",
            "cullMode": "back",
            "drawMode": "renderable"
        },
        {
            "name": "pass_light",
            "camera": "camNode",
            "shaders": [
                "pointlight_shader",
                "dirlight_shader",
                "spotlight_shader"
            ],
            "index": 1,
            "input": [
                "gbuffer_depth",
                "gbuffer_normal"
            ],
            "output": [
                "gbuffer_light"
            ],
            "blendMode": "add",
            "compareMode": "less",
            "cullMode": "back",
            "drawMode": "light"
        },
        {
            "name": "pass_final",
            "camera": "camNode",
            "shaders": [
                "phong_shader"
            ],
            "index": 2,
            "input": [
                "gbuffer_light",
                "gbuffer_diffuse"
            ],
            "output": [],
            "blendMode": "replace",
            "compareMode": "less",
            "cullMode": "back",
            "drawMode": "quad"
        }
    ]
}