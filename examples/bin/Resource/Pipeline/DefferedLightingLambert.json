{
    "shaders": [
        {
            "name": "gbuffer_shader",
            "path": "Resource/Shader/Lambert/Gbuffer.glsl",
            "type": "static_mesh", 
            "textures" : ["diffuse"]
        },
        {
            "name": "gbuffer_notexture_shader",
            "path": "Resource/Shader/Lambert/GBufferNoTexture.glsl",
            "type": "static_mesh", 
            "textures" : ["color_only"]
        },
        {
            "name": "gbuffer_skin_shader",
            "path": "Resource/Shader/Lambert/Gbuffer.glsl",
            "type": "skinned_mesh", 
            "textures" : ["diffuse"]
        },
        {
            "name": "gbuffer_notexture_skin_shader",
            "path": "Resource/Shader/Lambert/GBufferNoTexture.glsl",
            "type": "skinned_mesh", 
            "textures" : ["color_only"]
        },
        {
            "name": "pointlight_shader", 
            "path": "Resource/Shader/Lambert/PointLight.glsl", 
            "type": "point_light"
        },
        {
            "name": "dirlight_shader",
            "path": "Resource/Shader/Lambert/SunLight.glsl",
            "type": "dir_light"
        },
        {
            "name": "spotlight_shader",
            "path": "Resource/Shader/Lambert/SpotLight.glsl",
            "type": "spot_light"
        },
        {
            "name": "pointlight_shadow_shader", 
            "path": "Resource/Shader/Lambert/PointLight.glsl", 
            "type": "point_light_shadow"
        },
        {
            "name": "dirlight_shadow_shader",
            "path": "Resource/Shader/Lambert/SunLight.glsl",
            "type": "dir_light_shadow"
        },
        {
            "name": "spotlight_shadow_shader",
            "path": "Resource/Shader/Lambert/SpotLight.glsl",
            "type": "spot_light_shadow"
        },
        {
            "name": "lambert_shader",
            "path": "Resource/Shader/Lambert/Lambert.glsl"
        },
        {
            "name": "depth_shader",
            "path": "Resource/Shader/DrawDepth.glsl"
        },
        {
            "name": "leagcy_depth_shader",
            "path": "Resource/Shader/DrawDepthLeagcy.glsl"
        },
        {
            "name": "cube_depth_shader",
            "path": "Resource/Shader/DrawDepthCube.glsl"
        }
    ],
    "textures": [
        {
            "name": "gbuffer_depth",
            "format": "depth24",
            "width": 1280,
            "height": 720
        },
        {
            "name": "gbuffer_normal",
            "format": "rgba16",
            "width": 1280,
            "height": 720
        },
        {
            "name": "gbuffer_diffuse",
            "format": "rgba8",
            "width": 1280,
            "height": 720
        },
        {
            "name": "gbuffer_light",
            "format": "rgba8",
            "width": 1280,
            "height": 720
        }
    ],
    "passes": [
        {
            "name": "pass_gbuffer",
            "camera": "camNode",
            "shaders": [
                "gbuffer_shader", 
                "gbuffer_notexture_shader", 
                "gbuffer_skin_shader", 
                "gbuffer_notexture_skin_shader"
            ],
            "index": 0,
            "input": [],
            "output": [
                "gbuffer_depth",
                "gbuffer_normal",
                "gbuffer_diffuse"
            ],
            "blendMode": "replace",
            "drawMode": "opaque"
        },
        {
            "name": "pass_light",
            "camera": "camNode",
            "shaders": [
                "pointlight_shader",
                "dirlight_shader",
                "spotlight_shader",
                "pointlight_shadow_shader",
                "dirlight_shadow_shader",
                "spotlight_shadow_shader"
            ],
            "index": 1,
            "input": [
                "gbuffer_depth",
                "gbuffer_normal"
            ],
            "output": [
                "gbuffer_light"
            ],
            "blendMode": "add",
            "clearMode": "color",
            "clearColor": [0.01, 0.01, 0.01, 1.0],
            "drawMode": "light"
        },
        {
            "name": "pass_final",
            "camera": "camNode",
            "shaders": [
                "lambert_shader"
            ],
            "index": 2,
            "input": [
                "gbuffer_light",
                "gbuffer_diffuse"
            ],
            "output": [],
            "blendMode": "replace",
            "drawMode": "quad"
        }
    ]
}